@model List<Car>

<style>

    .grid-item {

        background-color: lightcoral;
        display: grid;
        grid-template-columns: auto auto auto;
        gap: 10px;
        padding: 10px;

    }

    .grid-item > div {

        background-color: lightblue;
        border: 1px solid black;
        font-size: 30px;

    }

</style>


@if (@Model.Count == 0)
{
    <h1>No cars found!</h1>
}
else 
{
    <div class="grid-item">

    @foreach (Car car in @Model) 
    {
        <div>

        <p>Id: @car.id
        <br/>

        Make: @car.make
        <br/>

        Model: @car.model
        <br/>

        Year: @car.year
        <br/>

        Color: @car.color</p>

        </div>
    }

    </div>
}
